{
  "root": true,
  "extends": ["@byndyusoft/eslint-config/backend"],
  "parserOptions": {
    "ecmaVersion": 2022, // Node.js v18 LTS
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "settings": {
        "import/resolver": {
          "typescript": {
            "project": "./tsconfig.json"
          }
        }
      }
    },
    {
      "files": ["./**/*.ts"],
      "rules": {
        // @typescript-eslint/eslint-plugin Supported Rules
        "@typescript-eslint/no-non-null-assertion": "off", // type hacks
        "unicorn/no-await-expression-member": "warn", // TODO: fix issues and remove this rule
        "unicorn/no-array-method-this-argument": "warn", // TODO: fix issues and remove this rule
        "unicorn/no-useless-spread": "warn" // TODO: fix issues and remove this rule
      }
    }
  ]
}
